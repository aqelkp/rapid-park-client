<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="@drawable/custom_info_bubble"
  >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phoenix Mall"
        android:id="@+id/tittle"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="148dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/linearLayout">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/ic_directions_car_black_24dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100/200"
                    android:id="@+id/carcount"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp"
                    android:layout_below="@+id/charge"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_directions_bike_black_24dp"
                    android:layout_marginLeft="2dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="40/100"
                    android:id="@+id/bike_ount"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp" />

            </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1$ per hour"
            android:id="@+id/charge"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"
            android:textColor="#d81e1e"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>
</LinearLayout>